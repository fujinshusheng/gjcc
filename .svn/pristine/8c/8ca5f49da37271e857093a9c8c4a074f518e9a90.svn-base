<script>
    apiready = function () {
        jw.sb.fixStatusBar(".zui-header");

        var sharedModule = api.require('shareAction');

        // 显示抢购 剩余时间
        var timefun = setInterval(function () {
            $(document).find(".toend").each(function (e, i) {
                var t = $(this).data('time');
                var type = $(this).closest(".footer_btn").data("type");
                if (t != undefined && t != "") {
                    var a = zDate.getendtimehoures(t);
                    if (a == "0") {
                        if (myapp.shopdetails.FStatus == 0 && type == 1) {
                            myapp.shopdetails.FStatus = 1;
                        }
                        if (myapp.shopdetails.FStatus == 1 && type == 2) {
                            myapp.shopdetails.FStatus = 2;
                            clearInterval(timefun);
                        }
                        if (myapp.shopdetails.FStatus == 2 && type == 2) {
                            clearInterval(timefun);
                        }
                    } else {
                        $(this).text(a);
                    }
                }
            });
        }, 1000);
        // 显示抢购 剩余时间
        // setInterval(function () {
        //     myapp.toendtime();
        // }, 1000);

        var photoBrowser = api.require('photoBrowser');


        function getftype(t) {
            var l = t.split(".");
            var f = l[l.length - 1];
            return f;
        }

        function photobrowder(imglist, index) {
            photoBrowser.open({
                images: imglist,
                placeholderImg: 'widget://res/loading.gif',
                bgColor: '#000',
                activeIndex: index
            }, function (ret, err) {
                if (ret.eventType == "click") {
                    photoBrowser.close();
                    api.closeFrame({
                        name: 'photoBrowser'
                    });
                }
                if (ret.eventType == "longPress") {
                    var img = imglist[ret.index];
                    jw.ts.actionSheet({
                        title: '',
                        buttons: ["保存"],
                    }, function (ret) {
                        if (ret == 1) {
                            var t1 = new Date().getTime();
                            var fname = t1 + "." + getftype(img);
                            jw.ts.jiazaiShow();
                            api.download({
                                url: img,
                                report: true,
                                cache: false,
                            }, function (ret, err) {
                                console.log(JSON.stringify(ret));
                                if (ret.state == 1) {
                                    //下载成功
                                    api.saveMediaToAlbum({
                                        path: ret.savePath
                                    }, function (ret, err) {
                                        if (ret && ret.status) {
                                            jw.ts.jiazaiHide();
                                            jw.ts.toast("保存成功");
                                        } else {
                                            jw.ts.jiazaiHide();
                                            jw.ts.toast("保存失败");
                                        }
                                    });
                                }
                                if (ret.state == 2) {
                                    jw.ts.jiazaiHide();
                                    jw.ts.toast("保存失败");
                                }
                            });
                        }
                    })
                }

            });
        }

        function imgclick() {

            setTimeout(function () {

                $(document).on("click", ".shopdetails_banner", function (e) {
                    e.stopPropagation();
                    var imgsrc = $(this).find("img").attr("src");
                    var imglist = [imgsrc];
                    photobrowder(imglist, 0)
                });

                $(".shop_details_content").on("click", "img", function (e) {
                    e.stopPropagation();
                    var imgsrc = $(this).attr("src");
                    var imglist = [];
                    var l = $(".shop_details_content").find("img").length;
                    var index = 0,
                        isrc = "";
                    for (var i = 0; i < l; i++) {
                        isrc = $(".shop_details_content").find("img").eq(i).attr("src");
                        imglist.push(isrc);
                        if (isrc == imgsrc) {
                            index = i;
                        }
                    }
                    photobrowder(imglist, index);
                });
            }, 1000);
        }

        var myapp = new Vue({
            "el": ".zui-app",
            data: {
                initshow: false,
                FId: api.pageParam.FId,  //商品id
                navindex: 1, // 1:商品 2： 评价 选项卡切换
                navindex2: 1, // 1全部 2好评 3中评 4差评 选项卡切换
                shopdetails: "", // 商品详情信息
                shopevaluate_nav: "", // 商品评价数量
                shopevaluate: [], // 商品评价列表
                zan: false, // 是否点赞
                kefushow: false, // 客服弹出框显示隐藏
                chongzhishow: false, // 充值弹出框显示隐藏
            },
            created: function () {
                this.getshopdetails();
                this.getshopevaluate();
                $(".shopdetails_banner").find(".pbimg").height(api.winWidth);
            },
            methods: {
                saveimg: function (s, e) {
                    console.log(JSON.stringify(s));
                    console.log(s.name);
                    jw.ts.confirm({
                        msg: "是否保存图片"
                    }, function (index) {
                        if (index == 1) {
                            var url = s.imgurl;
                        }
                    })
                },
                toendtime: function () {
                    var endtime = this.shopdetails.FEndDate;
                    if (endtime != undefined && endtime != "") {
                        var a = zDate.getendtime(endtime);
                        return a;
                    }
                },
                imglistfun: function (a) {
                    if (a != undefined && a != "") {
                        var list = a.split(",");
                        return list.filter(function (item) {
                            return item
                        })
                    }
                },
                navclick1: function (t) {
                    switch (t) {
                        case 1:
                            // 商品

                            break;
                        case 2:
                            // 评价

                            break;
                    }
                    this.navindex = t;
                },
                navclick2: function (t) {
                    switch (t) {
                        case 1:
                            // 全部

                            break;
                        case 2:
                            // 好评

                            break;
                        case 3:
                            // 中评

                            break;
                        case 4:
                            // 差评

                            break;
                    }
                    this.navindex2 = t;
                },
                canshuimg: function (imgsrc) {

                    photoBrowser.open({
                        images: [imgsrc],
                        placeholderImg: 'widget://res/loading.gif',
                        bgColor: '#000'
                    }, function (ret, err) {
                        if (ret.eventType == "click") {
                            photoBrowser.close();
                        }
                    });

                },
                /* 获取商品详情 */
                getshopdetails: function () {
                    var _this = this;
                    jw.submit("api41880", { // 移动端sql > 二期 > 积分商城 > 商品详情api41880
                        FId: _this.FId, //商品id
                        FUserId: jw.data.get("userid"), //   用户id
                    }, function (ret) {
                        _this.initshow = true;
                        if (ret.ds != undefined && ret.ds != "" && ret.ds[0].status == "000000") {
                            _this.shopdetails = ret.ds1[0];

                            _this.$nextTick(function () {
                                imgclick();
                            });


                        } else {
                            jw.ts.toast(ret.ds[0].msg);
                        }
                    });
                },
                // 商品评价
                getshopevaluate: function () {
                    var _this = this;

                    jw.submit("app_商品评价", {
                        FBusinessId: _this.FId
                    }, function (ret) {
                        if (ret.ds != undefined && ret.ds != "" && ret.ds[0].status ==
                            "000000") {
                            _this.shopevaluate_nav = ret.ds1[0];
                            _this.shopevaluate = ret.ds2;

                            _this.$nextTick(function () {
                                $(".zui-cboxlist").find("img").height($(
                                    ".zui-cboxlist").find("img").width())
                            });
                        } else {
                            //jw.ts.toast(ret.ds[0].msg);
                        }
                    });
                },
                // 筛选评价
                valuatelist: function (list) {
                    var _this = this;
                    return list.filter(function (item) {
                        if (_this.navindex2 == 1) {
                            return item
                        } else if (_this.navindex2 == 2) {
                            return item.FLevel > 4
                        } else if (_this.navindex2 == 3) {
                            return item.FLevel > 1 && item.FLevel < 5
                        } else if (_this.navindex2 == 4) {
                            return item.FLevel == 1
                        }
                    })
                },
                /* 分享 */
                share: function () {
                    var _this = this;
                    var url = "http://www.yunpuer.com/app_details/" + _this.Ftype + "-" + _this.FPageType + "-" + _this.FBusinessId + "-" + _this.FlashSaleId + ".html";
                    var text = ''
                    if(_this.shopdetails.oldFPrice>_this.shopdetails.FPrice){
                        text = _this.shopdetails.FName+ " 原价："+_this.shopdetails.oldFPrice +" 现价："+_this.shopdetails.FPrice
                    }else{
                        text = _this.shopdetails.FName+ " 现价："+_this.shopdetails.FPrice
                    }
                    jw.openFrame({
                        name: 'share',
                        url: '../share.html',
                        pageParam: {
                            text: text,
                            FType: '0',
                            Fid: _this.FBusinessId,
                            path: url,
                            thumb:_this.shopdetails.FImageUrl
                        }
                    })
                },
                // 立即购买
                justbuy: function () {
                    var _this = this;
                    if (jw.data.get("userid") == "") {
                        jw.ts.toast("请先登录！");
                        jw.openFrame({
                            name: 'login',
                            url: '../login.html',
                        });
                    } else {
                        var ly = api.pageParam.ly;
                        if (ly == undefined || ly == "") {
                            ly = "shopdetails"
                        }
                        jw.openWin({
                            name: "firm_order",
                            url: "../jifen/firm_order.html",
                            pageParam: {
                                FId: _this.FId, //商品id
                                shopdetails: JSON.stringify(_this.shopdetails),
                                ly: ly
                            }
                        });
                    }

                }
            }
        })
    }
</script>
