.z-sharebox{
  width: auto;
  min-width: 100%;
  overflow-x: auto;
  background: #ffffff;

  &:after,
  &:before{
    content: '';
    display: block;
    clear: both;
  }

  .z-share{
    float: left;
    padding: 0 1em;
    text-align: center;

    .iconfont{
      font-size: 3em;
    }
    .title{
      font-size: 12px;
      white-space: nowrap;
      color: #c0c0c0;
      display: block;
      position: relative;
      top: -10px;
    }

  }
}